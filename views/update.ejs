<!-- updateCustomer.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Update Customer</title>
</head>
<body>
    <div class="container">
        <form method="post" action="/customer/update">
            <div class="mb-3">
                <label for="id" class="form-label">Customer ID</label>
                <input type="text" value="<%=cus.id%>" class="form-control" id="id" name="id" readonly>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Customer Name</label>
                <input type="text" value="<%=cus.name%>" class="form-control" id="name" name="name">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Customer Address</label>
                <input type="text" value="<%=cus.address%>" class="form-control" id="address" name="address">
            </div>
            <div class="mb-3">
                <label for="mobileno" class="form-label">Customer MobileNo</label>
                <input type="text" value="<%=cus.mobileno%>" class="form-control" id="mobileno" name="mobileno">
            </div>
            <button type="submit" class="btn btn-warning">Update Customer</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>