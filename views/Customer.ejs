<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
   
    <title>Document</title>
</head>
<body>
    <div class="container">
        <form method="post">
            
            <% if (locals.cus) { %>
              <div class="mb-3">
                <label for="id" class="form-label">Customer ID</label>
                <input onkeyup="Id_KeyUp(this)" type="text"value="<%=locals.cus.id%>" class="form-control" id="id" name="id">
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">Customer Name</label>
                <input type="text" value="<%=locals.cus.name%>" class="form-control" id="name" name="name">
              </div>
              <div class="mb-3">
                <label for="address" class="form-label">Customer Address</label>
                <input type="text" value="<%=locals.cus.address%>" class="form-control" id="address" name="address">
              </div>
              <div class="mb-3">
                <label for="mobileno" class="form-label">Customer MobileNo</label>
                <input type="text" value="<%=locals.cus.mobileno%>" class="form-control" id="mobileno" name="mobileno">
              </div>
            <% }else{ %>
              <div class="mb-3">
                <label for="id" class="form-label">Customer ID</label>
                <input onkeyup="Id_KeyUp(this)" type="text" class="form-control" id="id" name="id">
              </div>
             
              <div class="mb-3">
                <label for="name" class="form-label">Customer Name</label>
                <input type="text" value="" class="form-control" id="name" name="name">
              </div>
              <div class="mb-3">
                <label for="address" class="form-label">Customer Address</label>
                <input type="text" class="form-control" id="address" name="address">
              </div>
              <div class="mb-3">
                <label for="mobileno" class="form-label">Customer MobileNo</label>
                <input type="text" class="form-control" id="mobileno" name="mobileno">
              </div>
              <%}%>
            <button id="btnAdd" name="btnAdd" type="submit" class="btn btn-primary">Add Customer</button>
            <button id="btnUpdate" name="btnUpdate " type="submit" class="btn btn-primary">Update Customer</button>
          
            <a id="anchorSearch"  href="#" type="submit" class="btn btn-primary">Search Customer</a>
            

        </form>  
          <div class="container">
            <table class="table">
                <thead>
                  <tr>   
                    <th scope="col">S.no</th>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">MobileNo</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody>
                 <% var count = 1; 
                     for(var e of locals.cusArr){ %>
                  <tr>
                    <th scope="row"><%= count %> </th>
                    <td><%= e.id %></td>
                    <td><%= e.name %></td>
                    <td><%= e.address %></td>
                    <td><%= e.mobileno %></td>
                    <td><input class="btn btn-primary" type="submit" value="Edit" ></td>
                    
                    <td><a href="Customer/delete/<%= e.id %>" class="btn btn-danger" >Delete</a></td>
                
                    </tr>
            <% count++} %>
                </tbody>
              </table>
          </div>
    </div>
    <script>
        function Id_KeyUp(e){ 
            document.getElementById('anchorSearch').setAttribute('href',"http://127.0.0.1:7080/customer/search/"+e.value);
       } 
        </script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>



